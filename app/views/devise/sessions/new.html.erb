<h2></h2>
<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h2 class="text-center"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('.password'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t('.remember_me') %>
          </label>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit t('.sign_in'), class: "btn btn-outline-primary btn-block btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
